<resources>
    <style name="Botty_READ" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_gray_500</item>
        <item name="colorPrimaryDark">@color/material_blue_gray_700</item>
        <item name="colorAccent">@color/material_blue_gray_200</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BottyCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/card_touch</item>
    </style>

    <style name="BottyCard.noTouch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/card</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_cool</item>
        <item name="android:titleTextStyle">@style/TitleTex</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="TitleTex">
        <item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Google Play ActionBar style -->
    <style name="Widget" />

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />

    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/TitleTex</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/TitleTex</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!-- ShowcaseView -->
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Ok</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/TitleTex</item>
    </style>
</resources>
